                android:visibility="gone" >

                <LinearLayout style="@style/tablerow_sty" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="故障模块" />

                    <TextView
                        android:id="@+id/tv_13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
